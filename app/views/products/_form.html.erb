
  <%= form_with(model: @product, local: true) do |form| %>
   <div class="container-form">
    <div class="form-control">
      <%= form.label :nombre, class:"label" %>
      <%= form.text_field :name, class:"input" %>
    </div>

    <div class="form-control">
      <%= form.label :precio, class:"label" %>
      <%= form.text_field :price, class:"input" %>
    </div>

    <div class="form-control">
      <%= form.label :cantidad, class:"label" %>
      <%= form.text_field :quantity, class:"input" %>
    </div>

     <%= form.label :imagenes, class:"label" %>
     <div class="form-control">
       <%= form.file_field :product_pictures, multiple: true %>
     </div>

     <div class="control">
       <label class="label">Categoría:</label>
       <div class="select">
         <%= form.select :category do %>
           <option value="ropa">Ropa</option>
           <option value="artesanias">Artesanias</option>
         <% end %>
       </div>
     </div>

    <div class="form-control">
      <%= form.label :descripción, class:"label" %>
      <%= form.text_area :description, class:"quill_container", id: "editor-container" %>
    </div>

     <br>

    <div class="is-grouped">
      <div class="is-grouped-centered has-text-centered">
        <%= form.submit :Guardar, class: "button is-info is-medium is-outlined" %>
      </div>
    </div>
  </div>
  <% end %>